<p id="notice"><%= notice %></p>

<%=@company.name%>
<hr>
<% @complaint.each do |complaint| %>
  <% if (@company.id == complaint.company_id) %>
  <div id="detail">
    <li><%= complaint.detail %></li>
  </div>
  <% end %>
<% end %>
<hr>
<%= form_with(model: [@company, Complaint.new]) do |f| %>
  <%= f.label :detail %><br>
  <%= f.text_area :detail %> <br>
  <%= f.submit %>
<% end %>
